
<!-- "Report" tab view -->
<table class="report-layout-table">

    <tr>

        <td>&nbsp;</td>

        <td align="right" colspan="2">
			<%= form_tag({ :controller => 'redcase/export', :action =>  :index, :export_to => :rtf, :project_id => @project.id, :time => Time.now }, :id => 'spec_id') do %>
                <%= link_to image_tag('test_spec.png', :plugin => 'redcase', :size=> '180x36', :style => 'float: right'),
                  { :controller => 'redcase/export', :action =>  :index, :export_to => :rtf, :project_id => @project.id, :time => Time.now },
                  { :class => 'no_underline', :submit => 'spec_id', url: url_for(:controller => 'redcase/export', :action =>  :index, :export_to => :rtf, :project_id => @project.id, :time => Time.now), :onclick => "jQuery(this).attr('href', jQuery(this).attr('url') + '&suite_id=' + jQuery('#suite').val())" } %>
            <% end %>        
        </td>

        <td>&nbsp;</td>

    </tr>

    <tr valign="top">

        <td>&nbsp;</td>

        <td align="center" class="back" style="border: 1px #bbbbbb solid; width: 550px">
            <div id="graph_id">
                <table width="100%">
                    <tr>
                        <td align="center" valign="middle">
                            <div id="combos_id" style="display: inline-block; vertical-align: middle"><%= render :partial => 'report_combos' %></div>
                            &nbsp;
                            <div id="download_button_id" style="display: inline-block; vertical-align: middle"><%= render :partial => 'report_download_button'%></div>
                        </td>
                    </tr>
                </table>
				<div id="jschart_container_id" class="graph" style="width: 510px; height: 510px; padding: 4px; position: relative">
					<div id="jschart_legend" style="position: absolute; right: 0; top: 0"></div>
					<canvas id="jschart_id" style="width: 510px; height: 510px"></canvas>
				</div>
            </div>
        </td>

        <!-- Test case execution results table -->
        <td id="report_results_table_id">
            <%= render :partial => 'report_results' %>
        </td>

        <td>&nbsp;</td>

    </tr>

</table>
